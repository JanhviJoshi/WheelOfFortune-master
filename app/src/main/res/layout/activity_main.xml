<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"
            android:text="QR Code"
            android:textSize="30dp"
            android:textColor="#000000"
            android:textStyle="bold"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textSize="18sp"
        android:gravity="center"
        android:text="SAP ID"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        />
        <EditText
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter SAP ID"
            android:layout_gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="9"
            android:id="@+id/sapidInput"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textSize="18sp"
                android:id="@+id/enterscoremanually"
                android:text="Enter Score Manually"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="3"
            android:hint="Enter Score"
                android:layout_gravity="center_horizontal"
            android:id="@+id/scoreInput"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or"
            android:textSize="18sp"
            android:id="@+id/ortextview"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="20dp"

            android:layout_gravity="center_horizontal"
            android:text="Scan QR Code"
            android:background="#6A6F6B"
            android:textColor="#FFFFFF"
            />
        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:layout_marginTop="50dp"
            android:background="#4285F4"
            android:layout_gravity="center_horizontal"
            />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/gen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GENERATOR"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>